<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tlMapDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgName"
            android:layout_width="25.6dp"
            android:layout_height="25.6dp"
            android:src="@drawable/map_branch_address" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:tag="semi_bold"
                android:text="Şube Adı"
                android:textColor="#383838"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:tag="semi_bold"
                android:text="İlçe, İl"
                android:textColor="#939393"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/trPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp">


        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42.65dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="7.62 km"
            android:textColor="#868686"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="22dp"
            android:layout_weight="0"
            android:clickable="true"
            android:text="@string/dlgSuccessProcess_btnClose1"
            android:textColor="@color/ing_orange"
            android:textSize="@dimen/bigger_text_size" />
    </LinearLayout>
</LinearLayout>