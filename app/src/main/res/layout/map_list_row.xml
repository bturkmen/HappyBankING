<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/nm_ListRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/imgListItemImage"
        android:layout_width="wrap_content"
        android:layout_height="38.5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:src="@drawable/map_branch_address" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:id="@+id/txtListItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="regular"
            android:text="Şube Adı"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/middle_text_size" />

        <TextView
            android:id="@+id/txtListItemAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:tag="regular"
            android:text="Şube adresi buraya gelecek"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/lower_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtListItemDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingRight="2.67dp"
        android:tag="regular"
        android:text=""
        android:textColor="@color/ing_orange"
        android:textSize="@dimen/lowest_text_size" />

</LinearLayout>